<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <SurfaceView
        android:id="@+id/surface_grabber_holder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/surface_grabber_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dip"
        android:layout_marginRight="35dp"
        android:layout_marginTop="118dp"
        android:background="@drawable/progress_unaccepted"
        android:padding="10dip"
        android:text="@string/zero"
        android:textSize="30sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#B3000000"
        android:orientation="vertical"
        android:padding="20dp" >

        <info.guardianproject.justpayphone.app.views.CustomFontTextView
            android:id="@+id/tvTakeYourPhoto"
            style="@style/jpp_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/take_your_photo_to_clock_in" />

        <Button
            android:id="@+id/surface_grabber_button"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:background="@drawable/camera_button_selector" />

    </LinearLayout>

</RelativeLayout>