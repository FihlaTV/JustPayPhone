<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/info.guardianproject.justpayphone"
    android:id="@+id/activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <info.guardianproject.justpayphone.app.views.DottedProgressView
        android:id="@+id/progress_dots"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        app:dot_color="@color/cream_a06"
        app:dot_color_current="@color/cream"
        app:dot_radius="7.5dp"
        app:dot_distance="30dp"
        app:dot_rim_color="@color/cream_a06"
        app:dot_rim_color_current="@color/cream" />

</RelativeLayout>
