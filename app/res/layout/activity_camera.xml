<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <SurfaceView
        android:id="@+id/surface_grabber_holder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/surface_grabber_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dip"
        android:layout_marginRight="35dp"
        android:layout_marginTop="118dp"
        android:background="@drawable/progress_unaccepted"
        android:padding="10dip"
        android:text="@string/zero"
        android:textSize="30sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#B3000000"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20dp" >

        <Button
            android:id="@+id/btnRedo"
            style="@style/jpp_h5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_camera_redo"
            android:text="@string/camera_redo"
            android:textColor="@color/cream" />

        <Button
            android:id="@+id/surface_grabber_button"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:background="@drawable/camera_button_selector" />

        <Button
            android:id="@+id/btnSave"
            style="@style/jpp_h5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_camera_save"
            android:text="@string/camera_save"
            android:textColor="@color/cream" />

    </LinearLayout>

</RelativeLayout>